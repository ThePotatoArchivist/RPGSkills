{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "Identifier": {
      "pattern": "^[a-z0-9_.-]+:[a-z0-9/._-]+$",
      "type": "string"
    },
    "ItemStack": {
      "additionalProperties": false,
      "properties": {
        "components": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-z0-9_.-]+:[a-z0-9/._-]+$": {}
          }
        },
        "count": {
          "type": "integer",
          "minimum": 1
        },
        "id": {
          "$ref": "#/definitions/Identifier"
        }
      },
      "required": [
        "id"
      ],
      "type": "object"
    },
    "Level": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "minProperties": 1,
          "patternProperties": {
            "^[a-z0-9_.-]+:[a-z0-9/._-]+$": {
              "anyOf": [
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "amount": {
                      "type": "number"
                    },
                    "operation": {
                      "enum": [
                        "add_multiplied_base",
                        "add_multiplied_total",
                        "add_value"
                      ],
                      "type": "string"
                    }
                  },
                  "required": [
                    "amount"
                  ]
                },
                {
                  "type": "number"
                }
              ]
            }
          }
        },
        "jobs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Identifier"
          }
        }
      }
    }
  },
  "properties": {
    "icon": {
      "anyOf": [
        {
          "$ref": "#/definitions/ItemStack"
        },
        {
          "$ref": "#/definitions/Identifier"
        }
      ]
    },
    "levels": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "\\d+": {
          "$ref": "#/definitions/Level"
        }
      }
    },
    "name": {
      "type": "string"
    }
  },
  "required": [
    "icon",
    "levels",
    "name"
  ],
  "type": "object"
}

