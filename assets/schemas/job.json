{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Identifier": {
      "pattern": "^[a-z0-9_.-]+:[a-z0-9/._-]+$",
      "type": "string"
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "cooldown_ticks": {
      "type": "integer",
      "minimum": 0
    },
    "reward_points": {
      "type": "integer",
      "minimum": 0
    },
    "spawn_as_orbs": {
      "type": "boolean"
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "[a-z0-9_]+"
          },
          "trigger": {
            "$ref": "#/definitions/Identifier",
            "description": "See https://misode.github.io/advancement/"
          },
          "conditions": {
            "type": "object",
            "description": "See https://misode.github.io/advancement/"
          },
          "description": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 1
          }
        },
        "additionalProperties": false,
        "required": [
          "trigger",
          "id",
          "description",
          "count"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "cooldown_ticks",
    "reward_points",
    "tasks"
  ]
}