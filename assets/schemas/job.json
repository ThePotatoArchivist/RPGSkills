{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Identifier": {
      "pattern": "^[a-z0-9_.-]+:[a-z0-9/._-]+$",
      "type": "string"
    }
  },

  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "cooldown_ticks": {
      "type": "integer",
      "minimum": 0
    },
    "reward_points": {
      "type": "integer",
      "minimum": 0
    },
    "spawn_as_orbs": {
      "type": "boolean"
    },
    "tasks": {
      "patternProperties": {
        "[a-z0-9_]+": {
          "type": "object",
          "properties": {
            "trigger": {
              "$ref": "#/definitions/Identifier",
              "description": "See https://misode.github.io/advancement/"
            },
            "conditions": {
              "type": "object",
              "description": "See https://misode.github.io/advancement/"
            },
            "description": {
              "type": "string"
            },
            "count": {
              "type": "integer",
              "minimum": 1
            }
          },
          "additionalProperties": false,
          "required": [
            "trigger",
            "description",
            "count"
          ]
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "description",
    "cooldown_ticks",
    "reward_points",
    "tasks"
  ]
}