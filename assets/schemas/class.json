{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Identifier": {
      "pattern": "^[a-z0-9_.-]+:[a-z0-9/._-]+$",
      "type": "string"
    },
    "ItemStack": {
      "additionalProperties": false,
      "properties": {
        "components": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-z0-9_.-]+:[a-z0-9/._-]+$": {}
          }
        },
        "count": {
          "type": "integer",
          "minimum": 1
        },
        "id": {
          "$ref": "#/definitions/Identifier"
        }
      },
      "required": [
        "id"
      ],
      "type": "object"
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "icon": {
      "anyOf": [
        {
          "$ref": "#/definitions/ItemStack"
        },
        {
          "$ref": "#/definitions/Identifier"
        }
      ]
    },
    "description": {
      "type": "string"
    },
    "starting_levels": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9_.-]+:[a-z0-9/._-]+$": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "required": [
    "name",
    "icon",
    "description",
    "starting_levels"
  ]
}